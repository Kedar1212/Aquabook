<!-- fragment_info.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/lavender"
        android:layout_below="@id/infoTextView"
        app:cardElevation="50dp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iss_auto_cycle="true"
            app:iss_delay="2000"
            app:iss_period="1000"
            app:iss_title_background="@drawable/gradient">
        </com.denzcoskun.imageslider.ImageSlider>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/servicenameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Service Name"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/serviceLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:text="Service Location"
        android:textSize="16sp"
        android:textStyle="italic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:alpha="0.5"
        android:background="@color/lavender" />
    <TextView
        android:id="@+id/Temp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:text="Amout per 1 Bottle "
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/bottlePriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Bottle Price"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/Temp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Amout per 1 Jar "
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/jarPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="Jar Price"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:alpha="0.5"
        android:background="@color/lavender" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Select Quantity"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/QuantityBottle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edittext"
        android:inputType="numberDecimal"
        android:drawablePadding="8dp"
        android:hint=" Add Quantity of Bottle*"
        android:padding="8dp"
        android:visibility="gone"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/QuantityJar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint=" Add Quantity of Jar*"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:visibility="gone"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:alpha="0.5"
        android:background="@color/lavender" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Total Amount"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:hint="Total"
        android:textSize="20dp" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/profile_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:text="Add TO CART"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

</ScrollView>
