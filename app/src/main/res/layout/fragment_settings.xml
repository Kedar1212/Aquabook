<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Service"
        android:textSize="36sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:textColor="#606060"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Enroll as Service Provider Today "
        android:textColor="#606060"
        android:textSize="18sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">


                <EditText
                    android:id="@+id/AddServiceName1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_home_repair_service_24"
                    android:drawablePadding="8dp"
                    android:hint="Service Name"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/AddServiceLocation1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_add_location_alt_24"
                    android:drawablePadding="8dp"
                    android:hint="Location"
                    android:padding="8dp"
                    android:textColor="@color/black" />


                <EditText
                    android:id="@+id/phoneNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:drawablePadding="8dp"
                    android:hint="Phone Number"
                    android:padding="8dp"
                    android:inputType="phone"
                    android:maxLength="10" />

                <EditText
                    android:id="@+id/AddServiceDiscription"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_event_note_24"
                    android:drawablePadding="8dp"
                    android:hint="Service Discription"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:text="Select Product"
                    android:textColor="@color/lavender"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/item_spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:padding="8dp"
                    android:textColor="@color/black">


                </Spinner>

                <EditText
                    android:id="@+id/jarPriceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_currency_rupee_24"
                    android:drawablePadding="8dp"
                    android:hint="Jar Price"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/bottlePriceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_currency_rupee_24"
                    android:drawablePadding="8dp"
                    android:hint="Bottle Price"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:text="Add Id Proof"
                    android:textColor="@color/lavender"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/ProofImageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="81dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/custom_edittext"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/upload" />


                <Button
                    android:id="@+id/submit_button1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Submit"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>
